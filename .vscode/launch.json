    "version": "0.2.0",
    "configurations": [
        {
            "command": "npx cds bind --exec mvn spring-boot:run",
            "name": "cds bind hybrid",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Launch Approuter",
            "program": "${workspaceFolder}/app/router/node_modules/@sap/approuter/approuter.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "localRoot": "${workspaceFolder}/app/router",
            "env": {
                "CF_NODEJS_LOGGING_LEVEL": "debug",
                "XS_APP_LOG_LEVEL": "debug"
            }
        },
        {
            "type": "java",
            "name": "Spring Boot-Application capdeploytest",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "customer.capdeploytest.Application",
            "projectName": "capdeploytest",
            "preLaunchTask": "cds_bind"
        }
    ],
    "compounds": [
        {
            "name": "ðŸš€ Start Full App (Spring Boot + Approuter)",
            "configurations": [
                "Spring Boot-Application capdeploytest",
                "Launch Approuter"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Full Stack",
                "order": 1
            }
        }
    ]
}